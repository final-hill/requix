import Presentation from '../../lib/agency/agent/Presentation';
import htmlFactory from '../../lib/agency/htmlFactory';

export default class GlobalNavPresentation extends Presentation<HTMLElement> {
    override initDom(): HTMLElement {
        const { nav } = htmlFactory;

        return nav({ className: 'global-nav' }, []);
    }

    override initStyle(): string[] {
        return [
            `.global-nav {
                background: linear-gradient(to right, var(--palette1), var(--palette1), var(--palette1-1));
                border-right: 1px outset;
                box-sizing: border-box;
                display: flex;
                flex-direction: column;
                overflow: auto;
            }`,
            `.global-nav .router-link {
                color: var(--font-primary);
                height: 0.5in;
                line-height: 0.5in;
                padding-left: 0.2in;
                text-decoration: none;
            }`
        ];
    }
}